# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build nestjs-app`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t nestjs-app`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system nestjs-app && \
          adduser --system -G nestjs-app nestjs-app

COPY apps/nestjs-app/dist nestjs-app/
RUN chown -R nestjs-app:nestjs-app .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix nestjs-app --omit=dev -f install

CMD [ "node", "nestjs-app" ]
